---
interface Action {
	label: string;
	href: string;
	variant?: 'primary' | 'secondary';
}

interface Props {
	eyebrow?: string;
	title: string;
	description?: string;
	actions?: Action[];
} 

import { withBase } from '../utils/slugify';
import Typewriter from '../components/Typewriter.astro';

const { eyebrow, title, description, actions = [] } = Astro.props;
---

<section class="min-h-screen flex items-center">
	<div class="note-section w-full max-w-[var(--content-width)] mx-auto">
		<div class="grid gap-3 md:gap-4 pb-6">
			{eyebrow && <p class="eyebrow">{eyebrow}</p>}
			<h1 class="text-4xl md:text-5xl lg:text-6xl leading-tight m-0">
				<Typewriter text={title} autoStart={true} />
			</h1>
			{description && <p class="text-muted text-base md:text-lg max-w-2xl m-0">{description}</p>}
			{actions.length > 0 && (
				<div class="flex flex-wrap gap-3 mt-3">
					{actions.map((action) => (
						<a class={`button ${action.variant ?? 'primary'}`} href={withBase(action.href)}>
							{action.label}
						</a>
					))}
				</div>
			)}
		</div>
	</div>
</section>
